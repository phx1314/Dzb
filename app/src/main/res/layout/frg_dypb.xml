<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/j10dp">

    <LinearLayout
        android:id="@+id/mLinearLayout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTextView_today"
            style="@style/text_style_11_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_rili"
            android:drawablePadding="@dimen/j5dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTextView_1"
            style="@style/text_style_11_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j2dp"
            android:textColor="#2f5584" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j25dp"
        android:layout_marginTop="@dimen/j6dp"
        android:background="@drawable/shape_bg_shen_top"
        android:orientation="horizontal">

        <TextView
            style="@style/text_style_11_black"
            android:layout_width="@dimen/j60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="排名"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/j90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_style_11_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="班级"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <TextView
            style="@style/text_style_11_black"
            android:layout_width="@dimen/j75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="总分"
            android:textStyle="bold" />
    </LinearLayout>

    <com.ab.view.pullview.AbPullListView
        android:id="@+id/mAbPullListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_da_bottom"
        android:cacheColorHint="#00000000"
        android:divider="#c9dcef"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="#00000000" />
</LinearLayout>

